<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.app.chic_ecommerce.navigationactivity.presentation.NavigationActivityViewModel" />
        <variable
            name="session"
            type="com.app.chic_ecommerce.common.data.Session" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pallet_white"
            tools:context=".navigationactivity.presentation.NavigationActivity">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/pallet_black"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/menuBtn"
                    android:layout_width="18dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/menu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minimal_chic"
                    android:textColor="@color/pallet_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ImageView
                    android:id="@+id/cartBtn"
                    android:layout_width="23dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/shopping_basket"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="18dp"/>
                <TextView
                    android:id="@+id/cartCounter"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="11sp"
                    android:text="2"
                    android:textColor="@color/pallet_white"
                    android:background="@drawable/oval"
                    android:backgroundTint="@color/pallet_red"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="5dp"
                    android:gravity="center_horizontal|top"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="7dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/appbar"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_gravity="start"
            android:background="@color/pallet_black"
            android:clipToPadding="false"
            android:textSize="16sp"
            app:headerLayout="@layout/navigation_header"
            app:itemBackground="@drawable/drawer_item_bg"
            app:itemTextColor="@drawable/drawer_item_txt_color"
            app:menu="@menu/navigation_menu" />
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>