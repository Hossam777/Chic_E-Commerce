<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.app.chic_ecommerce.productactivity.presentation.ProductActivityViewModel" />
        <variable
            name="session"
            type="com.app.chic_ecommerce.common.data.Session" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".productactivity.presentation.ProductActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bar_Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/pallet_black"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/left_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_info"
                    android:textColor="@color/pallet_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ImageView
                    android:id="@+id/cartBtn"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/shopping_basket"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="18dp"/>
                <TextView
                    android:id="@+id/cartCounter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textSize="11sp"
                    android:text="2"
                    android:textColor="@color/pallet_white"
                    android:background="@drawable/oval"
                    android:backgroundTint="@color/pallet_red"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="5dp"
                    android:gravity="center_horizontal|top"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="7dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:id="@+id/product_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/pallet_white"
            app:layout_constraintTop_toBottomOf="@+id/bar_Section"
            app:layout_constraintBottom_toTopOf="@+id/bottom_section">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="10dp"
                    app:tabBackground="@drawable/tab_indicator_bg"
                    app:tabPaddingEnd="7dp"
                    app:tabPaddingStart="7dp"
                    android:background="@color/transparent"
                    app:tabIndicatorColor="@color/pallet_black"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/viewPager"
                    android:layout_marginBottom="40dp"/>
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pallet_grey3"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/viewPager"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="27dp"/>
                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pallet_grey3"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/productName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="2dp"/>
                <ImageButton
                    android:id="@+id/favBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/heart"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewPager"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="28dp"/>
                <LinearLayout
                    android:id="@+id/spinner_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/productPrice"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/sizes_spinner_item_bg">
                    <Spinner
                        android:id="@+id/sizesSpinner"
                        android:layout_width="130dp"
                        android:layout_height="46dp"
                        android:dropDownSelector="@mipmap/down_arrow"
                        android:backgroundTint="#65696E"
                        android:popupBackground="@color/pallet_white"
                        android:dropDownWidth="130dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/colors_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pallet_grey3"
                    android:textSize="18sp"
                    android:text="@string/colors"
                    app:layout_constraintTop_toTopOf="@+id/spinner_container"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_container"
                    app:layout_constraintLeft_toRightOf="@+id/spinner_container"
                    android:layout_marginStart="60dp"/>
                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/spinner_container"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_container"
                    app:layout_constraintLeft_toRightOf="@+id/colors_txt"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/colorsRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:paddingHorizontal="8dp"
                        android:elevation="8dp"/>
                </ScrollView>
                <TextView
                    android:id="@+id/desc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pallet_grey3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/description"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_container"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="40dp"/>
                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pallet_grey3"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/desc_txt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginTop="2dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
            <EditText
                android:id="@+id/quantityTxt"
                android:layout_width="85dp"
                android:layout_height="60dp"
                android:background="@color/pallet_black"
                android:textSize="22sp"
                android:textColor="@color/pallet_white"
                android:textStyle="bold"
                android:hint="@string/qnt"
                android:textColorHint="@color/pallet_grey4"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                android:id="@+id/addToCartBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textSize="16sp"
                android:textColor="@color/pallet_white"
                android:text="@string/add_to_cart"
                android:textAllCaps="true"
                android:background="@drawable/rectangle"
                app:backgroundTint="@color/pallet_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/quantityTxt"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>