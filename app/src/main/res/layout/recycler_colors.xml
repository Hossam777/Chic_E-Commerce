<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/colorBorder"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="7dp" />
        <ImageButton
            android:id="@+id/colorBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/pallet_black"
            app:layout_constraintLeft_toLeftOf="@+id/colorBorder"
            app:layout_constraintRight_toRightOf="@+id/colorBorder"
            app:layout_constraintTop_toTopOf="@+id/colorBorder"
            app:layout_constraintBottom_toBottomOf="@+id/colorBorder"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>