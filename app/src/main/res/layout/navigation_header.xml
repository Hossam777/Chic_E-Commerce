<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_header"
        android:layout_width="match_parent"
        android:layout_height="119dp">

        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:hint="@string/search"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="@color/pallet_white"
            android:textColorHint="@color/pallet_grey4"
            android:textStyle="bold"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:background="@drawable/search_btn_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="20dp" />
        <ImageView
            android:id="@+id/search_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@mipmap/search"
            app:layout_constraintTop_toTopOf="@+id/searchBox"
            app:layout_constraintBottom_toBottomOf="@+id/searchBox"
            app:layout_constraintRight_toRightOf="@+id/searchBox"
            android:layout_marginEnd="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>